{
    "name": "cppd-medical-report-starter",
    "stack": "container",
    "addons": [
        "heroku-postgresql:hobby-dev",
        "heroku-redis:hobby-dev"
    ],
    "environments": {
        "review": {
            "addons": [
                "heroku-postgresql:hobby-dev",
                "heroku-redis:hobby-dev"
            ]
        }
    },
    "env": {
        "AUTO_MIGRATE_MODE": {
            "description": "Either 'safe' or 'alter'. Use 'alter' to automigrate.",
            "value": "alter"
        }
    }
}