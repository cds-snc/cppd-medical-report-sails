{#
  Date parts will be named [name]Year [name]Month [name]Day
  - `name`: field name
  - `label`: text for the label
  - `attributes`: object of optional attributes: class, hint, divClasses, autocomplete
#}
{% if errors %}
    {% set firstError = errors.keys()[0] %}
{% endif %}

{% macro dateInput(name, value, label, attributes) %}
    <div class="{{ 'has-error' if errors and errors[name] }} {{ attributes.divClasses }}">
        <label for="{{ name }}" id="{{ name }}__label">
            {% if attributes.required %}
                <span aria-hidden="true" class="required">*</span>
            {% endif %}
            {{ label }}
            {% if attributes.required %}
                <span class="required">{{ __("required")}}</span>
            {% endif %}
        </label>
        {% if attributes.hint %}
            <span class="form-message">{{ attributes.hint }}</span>
        {% endif %}
        {% if errors and errors[name] %}
            {{ validationMessage(errors[name], name) }}
        {% endif %}
        <div class="flex">
          <div class="w-32">
            <input class="{{ attributes.class if attributes.class }}" {% if attributes.autocomplete %}autocomplete="{{ attributes.autocomplete }}" {% endif %} type="text" id="{{ name }}" {% if errors and errors[name] %} aria-describedby="{{ name + '-error' }}" aria-invalid="true" {% endif %} {% if errors and firstError === name %} autofocus="true" {% endif %} name="{{ name }}Month" value="{{ value | datePart('MM') if value}}"/>
            <label for="{{ name }}" class="text-gray-600">{{ __('Month') }}</label>
          </div>
          <div class="w-32 ml-4">
            <input class="{{ attributes.class if attributes.class }}" {% if attributes.autocomplete %}autocomplete="{{ attributes.autocomplete }}" {% endif %} type="text" id="{{ name }}Day" {% if errors and errors[name] %} aria-describedby="{{ name + '-error' }}" aria-invalid="true" {% endif %} {% if errors and firstError === name %} autofocus="true" {% endif %} name="{{ name }}Day" value="{{ value | datePart('DD') if value }}"/>
            <label for="{{ name }}Day" class="text-gray-600">{{ __('Day') }}</label>
          </div>
          <div class="w-32 ml-4">
            <input class="{{ attributes.class if attributes.class }}" {% if attributes.autocomplete %}autocomplete="{{ attributes.autocomplete }}" {% endif %} type="text" id="{{ name }}Year" {% if errors and errors[name] %} aria-describedby="{{ name + '-error' }}" aria-invalid="true" {% endif %} {% if errors and firstError === name %} autofocus="true" {% endif %} name="{{ name }}Year" value="{{ value | datePart('YYYY') if value }}"/>
            <label for="{{ name }}Year" class="text-gray-600">{{ __('Year') }}</label>
          </div>
        </div>
    </div>
{% endmacro %}
