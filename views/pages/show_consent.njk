{% extends "layouts/layout.njk" %}

{% block content %}

    <h1>{{ data.firstName }} {{ data.lastName }}{{ __('show_consent.title') }}</h1>
 
    {% if data.consent %}
        <p>{{ data.fullName }} ({{ data.socialInsuranceNumber }}) {{ __('show_consent.intro') }}</p>

        
        {{ checkmarkList([
            ['consent.practioners',  true],
            ['consent.facilities',  true],
            ['consent.government',  true],
            ['consent.compensation_boards',  true],
            ['consent.employers',  true],
            ['consent.insurers',  true],
            ['consent.education',  data.consentEducation],
            ['consent.accountant',  data.consentAccountant],
            ['consent.financial',  data.consentFinancial],
            ['consent.volunteer',  data.consentVolunteer],
            ['consent.employees',  data.consentEmployees]
        ])}}

    {% else %}
         <p>{{ data.firstName }} {{ data.lastName }} ({{ data.socialInsuranceNumber }}) {{ __('show_consent.no_consent_intro') | safe }}</p>    
    {% endif %}

    <p>{{ data.firstName }} {{ data.lastName }}{{ __('show_consent.signature_intro') }}</p>
    {% if data.signatureMode === 'draw' %}
        {{ data.signatureDraw | safe }}
    {% else %}
        <span class="signature text-4xl">{{ data.signatureType }}</span>
    {% endif %}

    <!-- TODO -->
    <p>{{ __('show_consent.submitted') }} {{ submittedAt }}</p>
    <p>{{ __('show_consent.valid_til') }} {{ validTil }}</p>

{% endblock %}
