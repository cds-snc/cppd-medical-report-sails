{% extends "layouts/layout.njk" %}

{% block content %}
    <h1>{{ __('invite.title') }}</h1>

    {% if consent %}
        <div class="w-4/5 block border border-gray-500 border-solid p-5">
            <p>{{ __('invite.give_code') }}</p>
            <p class="font-bold text-6xl">{{ applicationCode }}</p>
            <p class="font-bold">{{ medicalProfessionalUrl }}</p>
            <p>{{ __('invite.medical_professional_instruction') }}</p>
            <a href="javascript:window.print()" class="button-link w-2/5">{{ __('invite.print_button') }}</a>
        </div>
    {% else %}
        <p>{{  __('invite.no_consent_1')  }}</p>
        <p>{{  __('invite.no_consent_2')  }}</p>
        <p><a href="{{ __('invite.no_consent_3_link_href') }}">{{  __('invite.no_consent_3_link_text')  }}</a> {{ __('invite.no_consent_3') }}</p>
    {% endif%}

{% endblock %}