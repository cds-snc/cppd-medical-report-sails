{% macro conditionForm(condition) %}
    {{ textInput('icdCode', 'ICD 9 CM code', { required: true, value: condition.icdCode }) }}

    {{ textInputRaw('symptomsBegan', __('add_condition.symptoms_began', medicalReport.fullName), { hint: __('add_condition.symptoms_began_hint'), required: true, "autocomplete": "off", value: condition.symptomsBegan }) }}

    {{ textArea('clinicallyImpair', 'add_condition.clinically_impair', { hint: 'add_condition.clinically_impair_hint', required: true, value: condition.clinicallyImpair }) }}

    {{ radioButtons('conditionOutlook',
      [
        {'value': '1', 'text':'add_condition.condition_outlook_improve'},
        {'value': '2', 'text':'add_condition.condition_outlook_deteriorate'},
        {'value': '3', 'text':'add_condition.condition_outlook_staysame'},
        {'value': '4', 'text':'add_condition.condition_outlook_unknown'}
        ], condition.conditionOutlook, 'add_condition.condition_outlook', errors, { required: true }) }}

    {{ textArea('conditionOutlookUnknown', 'add_condition.prognosis_unknown', { value: condition.conditionOutlookUnknown }) }}

    {{ radioButtons('symptomsOccur',
      [ {'value': '1','text':'add_condition.symptoms_occur_periodically'},
        {'value': '2', 'text': 'add_condition.symptoms_occur_continuously'},
        {'value': '3', 'text':'add_condition.symptoms_occur_unknown'}
      ],
      condition.symptomsOccur,
      'add_condition.symptoms_occur',
      errors, { required: true }) }}

    {{ textArea('symptomsOccurUnknown', 'add_condition.symptoms_occur_unknown_label', { value: condition.symptomsOccurUnknown }) }}

{% endmacro %}
