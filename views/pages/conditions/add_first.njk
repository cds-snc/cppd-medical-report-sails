{% extends "layouts/layout.njk" %}

{% block scripts %}
    <script type="text/javascript" src="/build/assets/js/condition.js"></script>
{% endblock %}

{% block content %}
    {%- from 'pages/conditions/condition-form.njk' import conditionForm with context -%}
    {%- from 'pages/conditions/condition-name.njk' import conditionName with context -%}

    <h1>{{ __('conditions.title') }}<br/> <span class="text-base">{{ __('conditions.patient')}} {{ patientName(data) }}</span></h1>

    <div>
        <form action="{{ route('conditions.add') }}" method="post">
            <input type="hidden" name="_csrf" value="{{ _csrf }}">
            
            {# NOTE: the conditionName is out here because the label changes
             # different depending on context (see add_first). The rest of 
             # the form stays the same, so it's in a macro.
             #}
            {{ conditionName('conditionName', 'add_condition.name_of_condition.first', patientName(data), { required: true, "autocomplete": "off", value: data.conditionName }) }}

            {{ conditionForm(data) }}

            <p id="attach_files_desk" class="font-bold">{{ __('add_condition.attach_notes') }}</p>
            <p class="text-gray-600">{{ __('add_condition.attach_notes_hint') }}</p>

            <div id="app">
                <file-upload files="{{ data.conditionFiles }}" field-name="conditionFiles" upload-label="{{ __('Upload') }}" remove-label="{{ __('documents.delete') }}"></file-upload>
            </div>

            <div class="multiple-choice multiple-choice--checkboxes">
                <div class="multiple-choice__item">
                    <input id="attachLater" name="attachLater" type="checkbox" value="attachLater">
                    <label for="attachLater">{{ __('add_condition.attach_later') }}</label>
                </div>
            </div>

            <div>
                <p>{{ __('conditions.all_conditions_message', patientName(data) ) }}</p>
            </div>

            <div class="w-full flex">
                <div class="w-2/3">
                    <button type="submit" name="save_and" value="add_another">{{ __('Save and add another condition') }}</button>
                </div>
                <div class="w-1/3 ml-4">
                    <button type="submit" name="save_and" value="continue">{{ __('Save and continue') }}</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}