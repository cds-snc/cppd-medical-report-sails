{% extends "layouts/layout.njk" %}

{% block content %}
  <h1>{{ __('Edit a user') }}</h1>

  <form action="{{ route('users.update', { id: data.id }) }}" method="POST">
    <input type="hidden" name="_csrf" value="{{ _csrf }}">

    {{ textInput('name', 'Name', { required: true }) }}
    {{ textInput('email', 'Email', { required: true }) }}

    <button type="submit" class="w-3/4 mt-8">
      Submit
    </button>
  </form>
{% endblock %}