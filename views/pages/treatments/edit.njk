{% extends "layouts/layout.njk" %}

{% block content %}
    {%- from 'pages/treatments/treatment-form.njk' import treatmentForm with context -%}

    <h1>{{ __('treatments.title') }}<br/> <span class="text-base">{{ __('patient_type')}} {{ patientName(data) }}</span></h1>

    <div>
        <form method="post">
            <input type="hidden" name="_csrf" value="{{ _csrf }}">

            {{ treatmentForm(treatment) }}

            <div class="w-full flex">
                <div class="w-1/3">
                    <button type="submit">{{ __('treatments.save_treatment') }}</button>
                </div>
                {% if data.treatments %}
                    <div class="w-1/3 text-center">
                        <a class="button-link transparent" href="{{ route('treatments') }}">{{ __('Cancel') }}</a>
                    </div>
                {% endif %}
            </div>
        </form>
    </div>
{% endblock %}