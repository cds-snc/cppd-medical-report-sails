{% extends "layouts/layout.njk" %}

{% block scripts %}
    <script type="text/javascript" src="/build/assets/js/work.js"></script>
{% endblock %}

{% block content %}

    <h1>{{ __('section6.title') }} <br/> <span class="text-base">{{ __('conditions.patient')}} {{ patientName(data) }}</span></h1>

    <div>
        <form method="post">

            <input type="hidden" name="_csrf" value="{{ _csrf }}">

            {{
                radioButtons('returnToWork',
                    [
                      {value: '1', text: 'Yes'},
                      {value: '2', text: 'No'},
                      {value: '3', text: 'Unknown'}
                    ],
                data.returnToWork,
                __('section6.return_work_question', patientName(data)),
                errors,
                { required: true })
            }}

            <div id="additional_fields">
                <div class="my-10">
                {{
                    radioButtons('returnToWorkWhen',
                        [
                          {value: '1', text: 'section6.return_work_6_to_12_months'},
                          {value: '2', text: 'section6.return_work_12_to_24_months'},
                          {value: '3', text: 'section6.return_work_more_than_24_months'},
                          {value: '4', text: 'section6.return_work_unknown'}
                        ],
                    data.returnToWorkWhen,
                    __('section6.return_work_timeframe_question', patientName(data)),
                    errors,
                    { required: true })
                }}
                </div>

                <div class="my-10">
                {{
                    radioButtons('typeOfWork',
                        [
                            {value: '1', text : 'section6.type_work_usual'},
                            {value: '2', text : 'section6.type_work_modified'},
                            {value: '3', text : 'section6.type_work_training'},
                            {value: '4', text : 'section6.type_work_other'}
                        ],
                    data.typeOfWork,
                    __('section6.type_work_question', patientName(data)),
                    errors,
                    { required: true })
                }}
                </div>

                {{ textArea(
                    'workDetails',
                    'section6.more_details'
                ) }}
            </div>

            <div class="buttons">
                <div class="buttons--left">
                    <button type="submit" class="w-1/3">{{ __('return_to_dashboard') }}</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
